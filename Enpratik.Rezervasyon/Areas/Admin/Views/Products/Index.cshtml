@model IEnumerable<Enpratik.Data.Products>
@using Enpratik.Core;
@{
    ViewBag.Title = "Index";
}


<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Ürün Listesi</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li class="dropdown">
                    <div class="form-group">
                        <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i> Araçlar</a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#"><i class="fa fa-file-excel-o"></i> Excel'e Aktar</a>
                            </li>
                            <li>
                                <b></b>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-file-pdf-o"></i> PDF'e Aktar</a>
                            </li>
                            <li>
                                <b></b>
                            </li>
                            <li>
                                <a href="#" class="buttons-copy buttons-html5" aria-controls="datatable-buttons"><i class="fa fa-copy"></i> Kayıtları Kopyala</a>
                            </li>
                            <li>
                                <b></b>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-print"></i> Yazdır</a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li>
                    <div class="form-group">
                        <a class="btn btn-primary" href="@Url.Action("Create")"><i class="fa fa-plus"></i> Yeni Ekle</a>
                    </div>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BrandId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StockNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tax)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StockQuantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Published)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrandId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StockNumber)
                            </td>
                            <td>
                                @Functions.MoneyFormat(2,item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tax)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StockQuantity)
                            </td>
                            <td>
                                @Html.DisplayIsActive(modelItem => item.Published)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                <a href="@Url.Action("Index","Product_Picture_Mapping", new { productId = item.Id })" class="btn btn-info btn-xs"><i class="fa fa-image"></i> Ürün Görselleri </a> | <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Düzenle </a> | <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-xs" data-toggle="modal" data-target=".bs-example-modal-sm"><i class="fa fa-trash-o"></i> Sil </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
