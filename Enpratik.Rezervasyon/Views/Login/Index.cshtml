@model Enpratik.Data.Customers
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="padding:30px; border:1px solid #eee;">

        <h4 class="m-text25 p-b-14">
            Giriş Yap
        </h4>
        @if (Session["RedirectCheckout"] != null)
        {
            <p class="s-text8 p-b-10" style="color:#000000">
                Satın alma işlemi için lütfen giriş yapınız!
            </p>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <p class="s-text8 p-b-10" style="color:#ff0000">
                @ViewBag.ErrorMessage
            </p>
        }
        <div class="bo12 of-hidden size19 m-b-20">
            @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "sizefull s-text7 p-l-18 p-r-18", placeholder = "Email *" } })
        </div>

        <div class="bo12 of-hidden size19 m-b-20">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "sizefull s-text7 p-l-18 p-r-18", placeholder = "Şifre *" } })
        </div>

        <div class="w-size24">
            <!-- Button -->
            <button type="submit" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                Giriş Yap
            </button>
        </div>

    </div>
}