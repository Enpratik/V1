@model Enpratik.Data.Customers
@{
    ViewBag.Title = "Index";
}

<style>
    .size19 {max-width:100%!important;}
</style>

<section class="bgwhite p-t-66 p-b-38">
    <div class="container">
        <div class="row">
            <div class="col-md-6 p-b-30">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                <div style="padding:30px; border:1px solid #eee;">

                    <h4 class="m-text25 p-b-14">
                        Giriş Yap
                    </h4>
                    @if (Session["RedirectCheckout"] != null)
                    {
                    <p class="s-text8 p-b-10" style="color:#000000">
                        Satın alma işlemi için lütfen giriş yapınız!
                    </p>
                    }

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <p class="s-text8 p-b-10" style="color:#ff0000">
                            @ViewBag.ErrorMessage
                        </p>
                    }
                    <div class="bo12 of-hidden size19 m-b-20">
                        @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "sizefull s-text7 p-l-18 p-r-18", placeholder = "Email *" } })
                    </div>

                    <div class="bo12 of-hidden size19 m-b-20">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "sizefull s-text7 p-l-18 p-r-18", placeholder = "Şifre *" } })
                    </div>



                    <div class="size19 m-b-20">
                        <a href="/hesabim/sifremi-unuttum">* Şifremi Unuttum</a>
                    </div>


                    <div class="w-size24">
                        <!-- Button -->
                        <button type="submit" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                            Giriş Yap
                        </button>
                    </div>

                </div>
                }

                </div>
            <div class="col-md-6 p-b-30">
                @using (Html.BeginForm("Create", "Customers", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="leave-comment">
                        <div style="padding:30px; border:1px solid #eee;">
                            <h4 class="m-text25 p-b-14">
                                Üye Değil misiniz?
                            </h4>

                            <p class="s-text8 p-b-40">
                                Hemen üye olun, indirimli alışverişin keyfini çıkarın!
                            </p>

                            @if (ViewBag.Result != null)
                            {
                            <p class="s-text8 p-b-10" style="color:#ff0000">
                                @ViewBag.Result
                            </p>
                            }
                            <div class="bo12 of-hidden size19 m-b-20">
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "sizefull s-text7 p-l-18 p-r-18", placeholder = "İsim *" } }) @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>

                            <div class="bo12 of-hidden size19 m-b-20">
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "sizefull s-text7 p-l-18 p-r-18", placeholder = "Soyisim *" } })@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>

                            <div class="bo12 of-hidden size19 m-b-20">
                                @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "sizefull s-text7 p-l-18 p-r-18", placeholder = "Email *" } })@Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                            </div>

                            <div class="bo12 of-hidden size19 m-b-30">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "sizefull s-text7 p-l-18 p-r-18", placeholder = "Şifre *" } })@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="w-size24">
                                <!-- Button -->
                                <button class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                                    Üye Ol
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>



