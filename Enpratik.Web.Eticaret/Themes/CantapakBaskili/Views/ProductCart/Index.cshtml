@model List<Enpratik.Data.Product_BasketItem>
@using Enpratik.Core;
@{
    ViewBag.Title = "Index";

    double subTotal = 0;
    double cargoTotal = 20;
    Enpratik.Data.EnPratik_DataHelper db = new Enpratik.Data.EnPratik_DataHelper();
}

<!-- Title Page -->
<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(/Themes/AllAboutBride/Content/images/heading-pages-06.jpg);">
    <h2 class="l-text2 t-center" style="color:#333333">
        Sepetim
    </h2>
</section>


@if (Model.Count == 0)
{
<section class="cart bgwhite p-t-70 p-b-100">
    <div class="container" style="text-align:center">
       <p>
           Sepetinizde ürün bulunmamaktadır! 
       </p>
    </div>
</section>

}
else
{

<section class="cart bgwhite p-t-70 p-b-100">
    <div class="container">
        <!-- Cart item -->
        @using (Html.BeginForm())
        {
            <div class="container-table-cart pos-relative">
                <div class="wrap-table-shopping-cart bgwhite">



                    <table class="table-shopping-cart">
                        <tr class="table-head">
                            <th class="column-1"></th>
                            <th class="column-2">Ürün</th>
                            <th class="column-3">Fiyat</th>
                            <th class="column-4 p-l-70">Miktar</th>
                            <th class="column-5">Toplam</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            var product = item.GetProduct();
                            var productImages = db.Product_Picture_Mapping.Where(p => p.ProductId == product.Id & p.IsProductImage == true).FirstOrDefault();

                            @Html.Hidden("ProductId", item.ProductId)

                            <tr class="table-row">
                                <td class="column-1">
                                    <div class="cart-img-product b-rad-4 o-f-hidden">
                                        <img src="@Functions.GetProductImages(productImages)" alt="@product.ProductName">
                                    </div>
                                </td>
                                <td class="column-2">
                                    @product.ProductName
                                    
                                    @{ 
                                        foreach (var variant in item.getVariantAttributesData())
                                        {
                                            <p style="font-size:11px;">
                                                @variant.variantName : @variant.variantValue
                                            </p>
                                        }
                                    }

                                </td>
                                <td class="column-3">@product.Price ₺</td>
                                <td class="column-4">
                                    <div class="flex-w bo5 of-hidden w-size17">
                                        <button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
                                            <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                                        </button>

                                        <input class="size8 m-text18 t-center num-product" type="number" name="Quantity" value="@item.Quantity">

                                        <button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
                                            <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                </td>
                                <td class="column-5">@Enpratik.Core.Functions.MoneyFormat(2, product.Price * item.Quantity) ₺</td>
                            </tr>
                            subTotal += (Convert.ToDouble(product.Price) * item.Quantity);

                        }
                    </table>


                </div>
            </div>

            <div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
                <div class="flex-w flex-m w-full-sm">
                    <div class="size11 bo4 m-r-10">
                        <input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="coupon-code" placeholder="Kupon Kodunu Giriniz..">
                    </div>

                    <div class="size12 trans-0-4 m-t-10 m-b-10 m-r-10">
                        <!-- Button -->
                        <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                            Gönder
                        </button>
                    </div>
                </div>

                <div class="size10 trans-0-4 m-t-10 m-b-10">
                    <!-- Button -->
                    <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" type="submit">
                        Sepeti Güncelle
                    </button>
                </div>
            </div>
        }
            <!-- Total -->
            <div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
                <h5 class="m-text20 p-b-24">
                    Sepet Tutarı
                </h5>

                <!--  -->
                <div class="flex-w flex-sb-m p-b-12">
                    <span class="s-text18 w-size19 w-full-sm">
                        Ara Toplam:
                    </span>

                    <span class="m-text21 w-size20 w-full-sm">
                        @Enpratik.Core.Functions.MoneyFormat(2, @subTotal) ₺
                    </span>

                    <span class="s-text18 w-size19 w-full-sm">
                        Kargo Ücreti:
                    </span>

                    <span class="m-text21 w-size20 w-full-sm">
                        @Enpratik.Core.Functions.MoneyFormat(2, @cargoTotal) ₺
                    </span>
                </div>

                <!--  -->
                <div class="flex-w flex-sb-m p-t-26 p-b-30">
                    <span class="m-text22 w-size19 w-full-sm">
                        Toplam:
                    </span>

                    <span class="m-text21 w-size20 w-full-sm">
                        @Enpratik.Core.Functions.MoneyFormat(2, (subTotal + cargoTotal)) ₺
                    </span>
                </div>

                <div class="size15 trans-0-4">
                    <!-- Button -->
                    <a href="@Url.Action("Index","Checkout")" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                        Ödeme İşlemİnİ Yap
                    </a>
                </div>
            </div>

        </div>
</section>

}

