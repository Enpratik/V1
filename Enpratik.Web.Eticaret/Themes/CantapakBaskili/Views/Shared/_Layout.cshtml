@using Enpratik.Data;
@using Enpratik.Core;
@{

    Enpratik.Data.EnPratik_DataHelper db = new Enpratik.Data.EnPratik_DataHelper();

}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keywords">
    <meta name="author" content="Enpratik.net">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Rubik:400,700" rel="stylesheet">
    <link href="~/Themes/CantapakBaskili/Content/fonts/icomoon/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Themes/CantapakBaskili/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Themes/CantapakBaskili/Content/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Themes/CantapakBaskili/Content/css/jquery-ui.css">
    <link rel="stylesheet" href="~/Themes/CantapakBaskili/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Themes/CantapakBaskili/Content/css/owl.theme.default.min.css">

    <link rel="stylesheet" href="~/Themes/CantapakBaskili/Content/css/aos.css">
    <link rel="stylesheet" href="~/Themes/CantapakBaskili/Content/css/style.css">

</head>
<body>

    <div class="site-wrap">

        <div class="site-navbar bg-white py-2 position-relative">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="logo">
                        <div class="site-logo">
                            <a href="/" class="js-logo-clone">
                                <img src="~/Themes/CantapakBaskili/Content/images/logo.png" />
                            </a>
                        </div>
                    </div>
                    <div class="main-nav d-none d-lg-block">
                        <nav class="site-navigation text-right text-md-center" role="navigation">
                            <ul class="site-menu js-clone-nav d-none d-lg-block">
                                @Html.Raw(Enpratik.Web.Eticaret.CantapakBaskili.HtmlHelpers.GetMenu())
                            </ul>
                        </nav>
                    </div>
                    <div class="icons">
                        <a href="https://www.instagram.com/cantapak/" target="_blank" class="icons-btn d-inline-block"><span class="icon-instagram"></span></a>
                        <a href="https://www.facebook.com/cantapakbezcanta" target="_blank" class="icons-btn d-inline-block"><span class="icon-facebook"></span></a>
                        <a href="cart.html" class="icons-btn d-inline-block bag">
                            <span class="icon-shopping-bag"></span>
                            <span class="number">2</span>
                        </a>
                        <a href="#" class="site-menu-toggle js-menu-toggle ml-3 d-inline-block d-lg-none"><span class="icon-menu"></span></a>
                    </div>
                </div>
            </div>
        </div>

        @RenderBody()


        <div class="site-section site-section-sm site-blocks-1 border-0" data-aos="fade">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-4 d-lg-flex mb-4 mb-lg-0 pl-4" data-aos="fade-up" data-aos-delay="">
                        <div class="icon mr-4 align-self-start">
                            <span class="icon-security"></span>
                        </div>
                        <div class="text">
                            <h2>GÜVELİ ALIŞVERİŞ</h2>
                            <p>256 bir SSl ile güvenli alışveriş</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 d-lg-flex mb-4 mb-lg-0 pl-4" data-aos="fade-up" data-aos-delay="100">
                        <div class="icon mr-4 align-self-start">
                            <span class="icon-certificate"></span>
                        </div>
                        <div class="text">
                            <h2>ORJİNAL ÜRÜN GARANTİSİ</h2>
                            <p>%100 orjinal ürün garantisi</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 d-lg-flex mb-4 mb-lg-0 pl-4" data-aos="fade-up" data-aos-delay="200">
                        <div class="icon mr-4 align-self-start">
                            <span class="icon-truck"></span>
                        </div>
                        <div class="text">
                            <h2>GÜVENLİ & HIZLI KARGO</h2>
                            <p>Stoklu ürünler ve hızlı teslimat</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="site-footer custom-border-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">

                        <div class="block-7">
                            <h3 class="footer-heading mb-4">Hakkımızda</h3>
                            <p>Çantapak,  2007 yılından bu yana daha yaşanabilir bir dünya için çalışmaktadır. Bez çanta ve promosyon ürün üretim ve tedarik kuruluşu olan Çantapak'ı tercih ettiğiniz için teşekkür ederiz.</p>
                        </div>
                    </div>
                    <div class="col-lg-5 ml-auto mb-5 mb-lg-0">
                        <div class="row">
                            <div class="col-md-12">
                                <h3 class="footer-heading mb-4">Çantapak</h3>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li><a href="#">Satış Sözleşmesi</a></li>
                                    <li><a href="#">Üyelik Sözleşmesi</a></li>
                                    <li><a href="#">Gizlilik Politikası</a></li>
                                    <li><a href="#">Teslimat ve İade</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3">
                        <div class="block-5 mb-5">
                            <h3 class="footer-heading mb-4">İletişim</h3>
                            <ul class="list-unstyled">
                                <li class="address">
                                    Piripaşa Mh. Kumbarhane Caddesi Kayacıoğlu İş Merkezi no36/A Hasköy
                                    Beyoğlu/ İstanbul
                                </li>
                                <li class="phone"><a href="tel://9005384875210">+90 (0538) 487 52 10</a></li>
                                <li class="email">destek@cantapak.com</li>
                            </ul>
                        </div>

                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-md-12">
                        <img src="~/Themes/CantapakBaskili/Content/images/logo-band.png" style="width: 384px;margin-bottom: 20px;" />
                    </div>
                    <div class="col-md-12">
                        <p>
                            Copyright &copy; 2019  <a href="//www.cantapakbaskili.com/" target="_blank" class="text-primary">Çantapak</a>
                        </p>
                    </div>

                </div>
            </div>
        </footer>
    </div>
    <script src="~/Themes/CantapakBaskili/Content/js/jquery-3.3.1.min.js"></script>
    <script src="~/Themes/CantapakBaskili/Content/js/jquery-ui.js"></script>
    <script src="~/Themes/CantapakBaskili/Content/js/popper.min.js"></script>
    <script src="~/Themes/CantapakBaskili/Content/js/bootstrap.min.js"></script>
    <script src="~/Themes/CantapakBaskili/Content/js/owl.carousel.min.js"></script>
    <script src="~/Themes/CantapakBaskili/Content/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Themes/CantapakBaskili/Content/js/aos.js"></script>
    <script src="~/Themes/CantapakBaskili/Content/js/main.js"></script>

</body>
</html>
