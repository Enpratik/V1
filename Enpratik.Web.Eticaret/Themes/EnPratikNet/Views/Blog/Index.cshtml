@model List<Enpratik.Data.Blogs>
@{
    ViewBag.Title = "Fitnotes Blog";
}


<section class="s-content">

    <div class="row narrow" style="margin:0 auto;">
        <div class="col-full s-content__header aos-init aos-animate" data-aos="fade-up">
            <h1>Blog</h1>

        </div>
    </div>

    <div class="row masonry-wrap">
        <div class="masonry" style="position: relative; height: 3532.8px;">

            <div class="grid-sizer"></div>
@foreach (var item in Model)
{

    var blogUrl = item.getUrl()+"-"+item.Id;

            <article class="masonry__brick entry format-standard aos-init aos-animate" data-aos="fade-up" style="position: absolute; left: 0%; top: 0px;">

                <div class="entry__thumb">
                    <a href="/blog/@blogUrl" class="entry__thumb-link">
                        <img src="/admin/@item.BlogImages" srcset="/admin/@item.BlogImages 1x" alt="@item.BlogTitle">
                    </a>
                </div>

                <div class="entry__text">
                    <div class="entry__header">

                        <div class="entry__date">
                            <a href="/blog/@blogUrl">@item.CreatedDate</a>
                        </div>
                        <h1 class="entry__title"><a href="/blog/@blogUrl">@item.BlogTitle</a></h1>

                    </div>
                    <div class="entry__excerpt">
                        <p>
                            @item.ShortDescription
                        </p>
                    </div>
                    <div class="entry__meta">
                        <span class="entry__meta-links">
                            <a href="/blog/@blogUrl">Devamı -></a>
                        </span>
                    </div>
                </div>

            </article> <!-- end article -->
}

        </div> <!-- end masonry -->
    </div> <!-- end masonry-wrap -->

