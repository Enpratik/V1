<div class="section pt-7 pb-7">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="commerce">
                    <h2>Giriş Yap</h2>
                    <form class="commerce-login-form">
                        <div class="row">
                            <div class="col-md-12">
                                <label>E-Posta Adresi<span class="required">*</span></label>
                                <div class="form-wrap">
                                    <input type="text" name="your-name" value="" size="40">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Şifre <span class="required">*</span></label>
