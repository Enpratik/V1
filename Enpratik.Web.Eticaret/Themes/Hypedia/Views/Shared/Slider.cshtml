@model Enpratik.Data.WidgetsDTO
@{
    Layout = null;
    Enpratik.Data.EnPratik_DataHelper db = new Enpratik.Data.EnPratik_DataHelper();

    var jsonParams = Enpratik.Core.Functions.GetWidgetContent(Model.WidgetZonesParamMapping.ParamJson);    
    var param = jsonParams.Where(s => s.ParameterName.Equals("sliderId")).Select(s => s.ParameterValue).FirstOrDefault();
    int sliderId = Convert.ToInt32(param);
    var slider = db.Sliders.Where(s => s.IsActive == true & s.Id == sliderId).FirstOrDefault();
    var sliderImages = db.SliderImageMappings.Where(s => s.SliderId == sliderId).ToList();
}

<div class="section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 p-0">
                <div id="rev_slider_2" class="rev_slider fullscreenbanner">
                    <ul>

                        @foreach (var item in sliderImages)
                        {
                            <li data-transition="fade" data-slotamount="default" data-hideafterloop="0" data-hideslideonmobile="off" data-easein="default" data-easeout="default" data-masterspeed="300" data-rotate="0" data-saveperformance="off" data-title="Slide">
                                <img src="/admin/@item.SliderImageUrl" alt="" data-bgposition="center top" data-bgfit="cover" data-bgrepeat="no-repeat" data-bgparallax="off" class="rev-slidebg" />

                            </li>
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
