@model Enpratik.Data.Blogs
@using Enpratik.Core;
@using Enpratik.Data;
@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Keywords = Model.MetaKeywords;

    EnPratik_DataHelper db = new EnPratik_DataHelper();

    var products = db.Products.Where(p => p.IsActive == true & p.Published == true).OrderByDescending(p => p.Id).Take(5).ToList();

}
<!-- breadcrumb -->
<div class="bread-crumb bgwhite flex-w p-l-52 p-r-15 p-t-30 p-l-15-sm">
    <a href="/" class="s-text16">
        Anasayfa
        <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
    </a>

    <a href="/blog" class="s-text16">
        Blog
        <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
    </a>

    <span class="s-text17">
        @Model.BlogTitle
    </span>
</div>

<!-- content page -->
<section class="bgwhite p-t-60 p-b-25">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-9 p-b-80">
                <div class="p-r-50 p-r-0-lg">
                    <div class="p-b-40">
                        <div class="blog-detail-img wrap-pic-w">
                            <img src="/admin/@Model.BlogImages" alt="IMG-BLOG">
                        </div>

                        <div class="blog-detail-txt p-t-33">
                            <h4 class="p-b-11 m-text24">
                                @Model.BlogTitle
                            </h4>

                            <div class="s-text8 flex-w flex-m p-b-21">
                               
                                <span>
                                    @Model.CreatedDate
                                    <span class="m-l-3 m-r-6">|</span>
                                </span>
                            </div>

                            <p class="p-b-25">
                                @Model.ShortDescription
                            </p>

                            <p class="p-b-25">
                                @Html.Raw(Model.FullDescription)
                            </p>
                        </div>

                        <div class="flex-m flex-w p-t-20" style="display:none">
                            <span class="s-text20 p-r-20">
                                Tags
                            </span>

                            <div class="wrap-tags flex-w">
                                <a href="#" class="tag-item">
                                    Streetstyle
                                </a>

                                <a href="#" class="tag-item">
                                    Crafts
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Leave a comment -->
                    <form class="leave-comment" style="display:none">
                        <h4 class="m-text25 p-b-14">
                            Leave a Comment
                        </h4>

                        <p class="s-text8 p-b-40">
                            Your email address will not be published. Required fields are marked *
                        </p>

                        <textarea class="dis-block s-text7 size18 bo12 p-l-18 p-r-18 p-t-13 m-b-20" name="comment" placeholder="Comment..."></textarea>

                        <div class="bo12 of-hidden size19 m-b-20">
                            <input class="sizefull s-text7 p-l-18 p-r-18" type="text" name="name" placeholder="Name *">
                        </div>

                        <div class="bo12 of-hidden size19 m-b-20">
                            <input class="sizefull s-text7 p-l-18 p-r-18" type="text" name="email" placeholder="Email *">
                        </div>

                        <div class="bo12 of-hidden size19 m-b-30">
                            <input class="sizefull s-text7 p-l-18 p-r-18" type="text" name="website" placeholder="Website">
                        </div>

                        <div class="w-size24">
                            <!-- Button -->
                            <button class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                                Post Comment
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-4 col-lg-3 p-b-80">
                <div class="rightbar">
                    <!-- Search -->
                    <div class="pos-relative bo11 of-hidden">
                        <input class="s-text7 size16 p-l-23 p-r-50" type="text" name="search-product" placeholder="Search">

                        <button class="flex-c-m size5 ab-r-m color1 color0-hov trans-0-4">
                            <i class="fs-13 fa fa-search" aria-hidden="true"></i>
                        </button>
                    </div>

                    <!-- Categories -->
                    <h4 class="m-text23 p-t-56 p-b-34">
                        Kategoriler
                    </h4>

                    <ul>
                        <li class="p-t-6 p-b-8 bo6">
                            <a href="#" class="s-text13 p-t-5 p-b-5">
                                Düğün 
                            </a>
                        </li>

                        <li class="p-t-6 p-b-8 bo7">
                            <a href="#" class="s-text13 p-t-5 p-b-5">
                                Gelinlik
                            </a>
                        </li>

                        <li class="p-t-6 p-b-8 bo7">
                            <a href="#" class="s-text13 p-t-5 p-b-5">
                                Mekan
                            </a>
                        </li>

                        <li class="p-t-6 p-b-8 bo7">
                            <a href="#" class="s-text13 p-t-5 p-b-5">
                                Lifestyle
                            </a>
                        </li>

                        <li class="p-t-6 p-b-8 bo7">
                            <a href="#" class="s-text13 p-t-5 p-b-5">
                                Moda
                            </a>
                        </li>
                    </ul>

                    <!-- Featured Products -->
                    <h4 class="m-text23 p-t-65 p-b-34">
                        Öne Çıkan Ürünler
                    </h4>

                    <ul class="bgwhite">
                        @foreach (var item in products)
                        {
                            var images = db.Product_Picture_Mapping.Where(p => p.ProductId == item.Id & p.IsProductImage == true).FirstOrDefault();

                            var productUrl = "product/" + item.getUrl() + "-" + item.Id;

                            <li class="flex-w p-b-20">

                                <a href="/@productUrl">
                                    <img src="@Functions.GetProductImages(images)" class="dis-block wrap-pic-w w-size22 m-r-20 trans-0-4 hov4" alt="@item.ProductName">
                                </a>

                                <div class="w-size23 p-t-5">
                                    <a href="/@productUrl" class="s-text20">
                                        @item.ProductName
                                    </a>

                                    <span class="dis-block s-text17 p-t-6">
                                        @Functions.MoneyFormat(2, item.Price) ₺
                                    </span>
                                </div>
                            </li>
                        }


                    </ul>


                    <!-- Tags -->
                    <h4 class="m-text23 p-t-50 p-b-25">
                        Tags
                    </h4>

                    <div class="wrap-tags flex-w">
                        <a href="#" class="tag-item">
                            gelin
                        </a>

                        <a href="#" class="tag-item">
                            düğün
                        </a>

                        <a href="#" class="tag-item">
                            gelinlik, 
                        </a>

                        <a href="#" class="tag-item">
                            moda
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
