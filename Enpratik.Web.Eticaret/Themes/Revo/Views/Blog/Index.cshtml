@model List<Enpratik.Data.Blogs>
@using Enpratik.Core;
@using Enpratik.Data;
@{
    ViewBag.Title = "Blog";

    EnPratik_DataHelper db = new EnPratik_DataHelper();

    var products = db.Products.Where(p => p.IsActive == true & p.Published == true).OrderByDescending(p => p.Id).Take(5).ToList();

}

<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(/Themes/AllAboutBride/Content/images/heading-pages-05.jpg);">
    <h2 class="l-text2 t-center" style="color:#333333">
        Blog
    </h2>
</section>
<section class="bgwhite p-t-60">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-9 p-b-75">
                <div class="p-r-50 p-r-0-lg">
                    <!-- item blog -->
                    @foreach (var item in Model)
                    {
                        var blogUrl = item.getUrl() + "-" + item.Id;

                        <div class="item-blog p-b-80">
                            <a href="/blog/@blogUrl" class="item-blog-img pos-relative dis-block hov-img-zoom">
                                <img src="/admin/@item.BlogImages" alt="@item.BlogTitle" />

                                <span class="item-blog-date dis-block flex-c-m pos1 size17 bg4 s-text1">
                                    @item.CreatedDate
                                </span>
                            </a>

                            <div class="item-blog-txt p-t-33">
                                <h4 class="p-b-11">
                                    <a href="/blog/@blogUrl" class="m-text24">
                                        @item.BlogTitle
                                    </a>
                                </h4>


                                <p class="p-b-12">
                                    @item.ShortDescription
                                </p>

                                <a href="/blog/@blogUrl" class="s-text20">
                                    Devamı -->
                                    <i class="fa fa-long-arrow-right m-l-8" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                <div class="pagination flex-m flex-w p-r-50">
                    <a href="#" class="item-pagination flex-c-m trans-0-4 active-pagination">1</a>
                    <a href="#" class="item-pagination flex-c-m trans-0-4">2</a>
                </div>
            </div>

            <div class="col-md-4 col-lg-3 p-b-75">
                <div class="rightbar">
                    <!-- Search -->
                    <div class="pos-relative bo11 of-hidden">
                        <input class="s-text7 size16 p-l-23 p-r-50" type="text" name="search-product" placeholder="Search">

                        <button class="flex-c-m size5 ab-r-m color1 color0-hov trans-0-4">
                            <i class="fs-13 fa fa-search" aria-hidden="true"></i>
                        </button>
                    </div>

                    <!-- Categories -->
                    <h4 class="m-text23 p-t-56 p-b-34">
                        Kategoriler
                    </h4>

                    <ul>
                        <li class="p-t-6 p-b-8 bo6">
                            <a href="#" class="s-text13 p-t-5 p-b-5">
                                Düğün
                            </a>
                        </li>

                        <li class="p-t-6 p-b-8 bo7">
                            <a href="#" class="s-text13 p-t-5 p-b-5">
                                Gelinlik
                            </a>
                        </li>

                        <li class="p-t-6 p-b-8 bo7">
                            <a href="#" class="s-text13 p-t-5 p-b-5">
                                Mekan
                            </a>
                        </li>

                        <li class="p-t-6 p-b-8 bo7">
                            <a href="#" class="s-text13 p-t-5 p-b-5">
                                Lifestyle
                            </a>
                        </li>

                        <li class="p-t-6 p-b-8 bo7">
                            <a href="#" class="s-text13 p-t-5 p-b-5">
                                Moda
                            </a>
                        </li>
                    </ul>

                    <!-- Featured Products -->
                    <h4 class="m-text23 p-t-65 p-b-34">
                        Öne Çıkan Ürünler
                    </h4>

                    <ul class="bgwhite">
                        @foreach (var item in products)
                        {
                            var images = db.Product_Picture_Mapping.Where(p => p.ProductId == item.Id & p.IsProductImage == true).FirstOrDefault();

                            var productUrl = "product/" + item.getUrl() + "-" + item.Id;

                            <li class="flex-w p-b-20">
                               
                                <a href="/@productUrl">
                                    <img src="@Functions.GetProductImages(images)" class="dis-block wrap-pic-w w-size22 m-r-20 trans-0-4 hov4" alt="@item.ProductName">
                                </a>

                                <div class="w-size23 p-t-5">
                                    <a href="/@productUrl" class="s-text20">
                                        @item.ProductName
                                    </a>

                                    <span class="dis-block s-text17 p-t-6">
                                        @Functions.MoneyFormat(2, item.Price) ₺
                                    </span>
                                </div>
                            </li>
                        }


                    </ul>

                    <!-- Tags -->
                    <h4 class="m-text23 p-t-50 p-b-25">
                        Tags
                    </h4>

                    <div class="wrap-tags flex-w">
                        <a href="#" class="tag-item">
                            gelin
                        </a>

                        <a href="#" class="tag-item">
                            düğün
                        </a>

                        <a href="#" class="tag-item">
                            gelinlik,
                        </a>

                        <a href="#" class="tag-item">
                            moda
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
