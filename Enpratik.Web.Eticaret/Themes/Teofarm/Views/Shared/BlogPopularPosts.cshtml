@{
    Layout = null;
    Enpratik.Data.EnPratik_DataHelper db = new Enpratik.Data.EnPratik_DataHelper();

    var blogs = db.Blogs.Where(b => b.IsActive == true & b.IsPublished == true).OrderByDescending(b => b.Id).Take(3).ToList();
}
<div class="widget widget_posts_widget">
    <h3 class="widget-title">Son Yazılar</h3>
    @foreach (var item in blogs)
    {
        var blogUrl = item.getUrl() + "-" + item.Id;
        <div class="item">
            <div class="thumb">
                <img src="/admin/@item.BlogImages" onerror="this.src='https://www.enpratik.net/img/no-image.png'" alt="@item.BlogTitle" />
            </div>
            <div class="info">
                <span class="title">
                    <a href="/blog/@blogUrl"> @item.BlogTitle </a>
                </span>
                <span class="date"> @item.CreatedDate </span>
            </div>
        </div>
    }
</div>
