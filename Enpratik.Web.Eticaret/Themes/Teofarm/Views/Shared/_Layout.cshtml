        </div>
    </div>
    <div class="site">
        <div class="topbar">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="topbar-text">
                            <span>Geçmişten günümüze sağlıklı tarım, sağlıklı gıda, sağlıklı nesil</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="topbar-menu">
                            <ul class="topbar-menu">
                                @*<li class="dropdown">
                                        <a href="#">Languages</a>
                                        <ul class="sub-menu">
                                            <li><a href="#">English</a></li>
                                            <li><a href="#">Français</a></li>
                                        </ul>
                                    </li>*@

                                @if (Enpratik.Web.Eticaret.Model.Current.User == null)
                                {
                                    <li><a href="/hesabim/uye-girisi">Giriş Yap</a></li>
                                    <li><a href="/hesabim/uye-ol">Üye Ol</a></li>
                                }
                                else {
                                    <li><a href="/hesabim">@Enpratik.Web.Eticaret.Model.Current.User.FirstName  @Enpratik.Web.Eticaret.Model.Current.User.LastName</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <header id="header" class="header header-desktop header-2">
            <div class="top-search">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <form action="@Url.Action("Search","Default")">
                                <input type="search" class="top-search-input" name="s" placeholder="Aramak istediğiniz kelimeyi yazınız.." />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <a href="/" id="logo">
                            <img class="logo-image" src="~/Themes/Teofarm/Content/images/logo.png" alt="Organik Logo" />
                        </a>
                    </div>
                    <div class="col-md-9">
                        <div class="header-right">
                            <nav class="menu">
                                <ul class="main-menu">
                                    @Html.Raw(Enpratik.Web.Eticaret.Teofarm.HtmlHelpers.GetMenu())
                                </ul>
                            </nav>
                            <div class="btn-wrap">
                                <div class="mini-cart-wrap">
                                    <div class="mini-cart">
                                        <div class="mini-cart-icon" data-count="@Enpratik.Web.Eticaret.Model.Current.GetBasketItem().Count">
                                            <i class="ion-bag"></i>
                                        </div>
                                    </div>

                                    @if (@Enpratik.Web.Eticaret.Model.Current.GetBasketItem().Count > 0)
                                    {
                                        double totalPrice = 0;
                                        <div class="widget-shopping-cart-content">
                                            <ul class="cart-list">
                                                @foreach (var item in @Enpratik.Web.Eticaret.Model.Current.GetBasketItem())
                                                {
                                                    var product = item.GetProduct();
                                                    var images = db.Product_Picture_Mapping.Where(p => p.ProductId == product.Id & p.IsProductImage == true).FirstOrDefault();
                                                    var productUrl = "product/" + product.getUrl() + "-" + product.Id;
                                                <li>
                                                    <a href="/@productUrl">
                                                        <img src="@Functions.GetProductImages(images)" alt="" />@product.ProductName
                                                    </a>
                                                    @foreach (var variant in item.getVariantAttributesData())
                                                    {
                                                    <p style="font-size: 11px;padding: 0;margin: 0;">
                                                        @variant.variantName : @variant.variantValue
                                                    </p>
                                                    }
                                                    <span class="quantity">@item.Quantity × @item.Price ₺</span>
                                                </li>

                                                    totalPrice += (item.Quantity * Convert.ToDouble(item.Price));

                                                }
                                            </ul>
                                            <p class="total">
                                                <strong>Ara Toplam:</strong>
                                                <span class="amount">@Enpratik.Core.Functions.MoneyFormat(2, totalPrice) ₺</span>
                                            </p>
                                            <p class="buttons">
                                                <a href="/sepetim" class="view-cart">Sepetim</a>
                                                <a href="/sepetim" class="checkout">Ödeme Yap</a>
                                            </p>
                                        </div>

                                    }

                                </div>
                                <div class="top-search-btn-wrap">
                                    <div class="top-search-btn">
                                        <a href="javascript:void(0);">
                                            <i class="ion-search"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <header class="header header-mobile">
            <div class="container">
                <div class="row">
                    <div class="col-xs-2">
