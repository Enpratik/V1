        </div>
    </div>
    <div id="menu-slideout" class="slideout-menu hidden-md-up">
        <div class="mobile-menu">
            <ul id="mobile-menu" class="menu">
                @Html.Raw(Enpratik.Web.Eticaret.Teofarm.HtmlHelpers.GetMobilMenu())
