@model Enpratik.Data.Customers
@{
    ViewBag.Title = "Index";
}

<style>
    .size19 {max-width:100%!important;}
</style>

<section class="bgwhite p-t-66 p-b-38">
    <div class="container">
        <div class="row">
            <div class="col-md-12 p-b-30">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                <div style="padding:30px; border:1px solid #eee;">

                    <h4 class="m-text25 p-b-14">
                        Şifremi Değiştir
                    </h4>

                    @if (Request["m"] == null)
                    {
                        <p class="s-text8 p-b-10" style="color:#000000">
                            Yeni şifrenizi aşağıdaki alana yazarak "Kaydet" butonuna tıklayın.
                        </p>

                        if (ViewBag.ErrorMessage != null)
                        {
                            <p class="s-text8 p-b-10" style="color:#ff0000">
                                @ViewBag.ErrorMessage
                            </p>
                        }
                        <div class="bo12 of-hidden size19 m-b-20">
                            @Html.PasswordFor(model => model.Password, new { @class = "sizefull s-text7 p-l-18 p-r-18", @placeholder = "Şifre *" })
                        </div>
                        <div class="bo12 of-hidden size19 m-b-20">
                            @Html.Password("passwordAgain", null, new { @class = "sizefull s-text7 p-l-18 p-r-18", @placeholder = "Şifre Tekrar *" })
                        </div>

                        <div class="w-size24">
                            <!-- Button -->
                            <button type="submit" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                                Kaydet
                            </button>
                        </div>

                    }
                    else
                    {
                        <p class="s-text8 p-b-10" style="color:#000000">
                            Şifreniz değiştirilmiştir. <a href="/hesabim/uye-girisi">Üye girişi yapmak için tıklayınız.</a>
                        </p>
                    }

                </div>
                }

                </div>
        </div>
    </div>
</section>



