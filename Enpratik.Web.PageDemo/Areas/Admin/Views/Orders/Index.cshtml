@model IEnumerable<Enpratik.Data.Product_BasketItem>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Sipariş Listesi</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li class="dropdown">
                    <div class="form-group">
                        <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i> Araçlar</a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#"><i class="fa fa-file-excel-o"></i> Excel'e Aktar</a>
                            </li>
                            <li>
                                <b></b>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-file-pdf-o"></i> PDF'e Aktar</a>
                            </li>
                            <li>
                                <b></b>
                            </li>
                            <li>
                                <a href="#" class="buttons-copy buttons-html5" aria-controls="datatable-buttons"><i class="fa fa-copy"></i> Kayıtları Kopyala</a>
                            </li>
                            <li>
                                <b></b>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-print"></i> Yazdır</a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            Sipariş Numarası
                        </th>
                        <th>
                            Müşteri
                        </th>
                        <th>
                            Sipariş Durumu
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderNumber)
                        </td>
                        <td>
                            @{var customer = item.GetCustomer();
                                var customerName = customer.FirstName + " " + customer.LastName;
                                }
                            @Html.DisplayFor(modelItem => customerName)
                        </td>
                        <td>
                            @{var statusText = item.GetStatusText();
                            }
                            @Html.DisplayFor(modelItem => statusText)
                        </td>
                        <td>
                            <a href="@Url.Action("Details", new { orderNumber = item.OrderNumber })" class="btn btn-primary btn-xs"><i class="fa fa-wpforms"></i> Detay </a> 
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

