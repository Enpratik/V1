@model List<Enpratik.Data.WidgetZonesParamMappingDTO>

@{
    Layout = null;
}
<!-- Bootstrap -->
<link href="~/Content/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="~/Content/vendors/jquery/dist/jquery.min.js"></script>
<script src="~/Content/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- Tinymce Style -->
<link href="~/Content/Plugins/fileman/css/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" />
<!-- Tinymce Scripts -->
<script src="~/Content/Plugins/tinymce/js/tinymce/tinymce.min.js"></script>
<script src="~/Content/Plugins/tinymce/js/tinymce/tinymce.utils.js"></script>
<script src="~/Content/Plugins/fileman/js/jquery-ui-1.10.4.custom.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="x_content" style="overflow:hidden;">
        <div class="row">
            <div class="col-md-12">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success alert-dismissible fade in" role="alert">
                        <i class="fa fa-info-circle"></i> <strong>@ViewBag.Message</strong>
                    </div>
                }

                @foreach (var item in Model)
                {
                    <div class="form-group">
                        @Html.Label("lbl" + item.ParameterName, item.ParameterName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <p class="font-gray-dark"><i class="fa fa-info-circle"></i> @item.ParameterDescription</p>
                        <div class="col-md-10">
                            @if (item.IsControlWidget)
                            {
                                <input type="text" name="@("txt" + item.ParameterName)" class="form-control" value="@item.ParameterValue" />
                            }
                            else
                            {
                                @*class= "mcetiny md-input"*@
                                <textarea rows="16" name="@("txt" + item.ParameterName)" class="mcetiny md-input">
                                    @item.ParameterValue
                                </textarea>
                            }
                        </div>
                    </div>
                }


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="button" class="btn btn-default" onclick="cancel_click();">İptal</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>

                <div class="ln_solid"></div>
            </div>
        </div>
    </div>
}
<script>
    function cancel_click() {
        parent.clearIframeUrl();
    }
</script>
