@model List<Enpratik.Data.Blogs>
@{
    ViewBag.Title = "Blog";

    List<Enpratik.Data.Blog_Categories> blogCategories = ViewBag.BlogCategories as List<Enpratik.Data.Blog_Categories>;
}

<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="/"><i class="fa fa-home"></i> Anasayfa</a>
                    <span>Blog</span>
                </div>
            </div>
        </div>
    </div>
</div>


<section class="blog-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 order-1 order-lg-2">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        var blogUrl = item.getUrl() + "-" + item.Id;

                        <div class="col-lg-4 col-sm-6">
                            <div class="blog-item">
                                <div class="bi-pic">
                                    <img src="@item.BlogImages" alt="@item.BlogTitle">
                                </div>
                                <div class="bi-text">
                                    <a href="/blog/@blogUrl">
                                        <h4>@item.BlogTitle</h4>
                                    </a>
                                    <p>SPOR <span>- @item.CreatedDate</span></p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

