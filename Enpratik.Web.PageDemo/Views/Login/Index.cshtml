@model Enpratik.Data.Customers
@{
    ViewBag.Title = "Üye Girişi";
}


<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="/"><i class="fa fa-home"></i> Anasayfa</a>
                    <span>Üye Girişi</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Üye Girişi</h2>
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "commerce-login-form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        if (ViewBag.ErrorMessage != null)
                        {
                            <div class="row">
                                <div class="col-md-12">
                                    <font style="color:#ff0000;">
                                        @ViewBag.ErrorMessage
                                    </font>
                                </div>
                            </div>
                        }
                        
                        <div class="form-wrap">
                           
                        </div>

                        <div class="group-input">
                            @Html.LabelFor(model => model.Mail, htmlAttributes: new { @for = "username" })
                            @Html.EditorFor(model => model.Mail)
                            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                        </div>
                        <div class="group-input">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @for = "pass" })
                            @Html.PasswordFor(model => model.Password)
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="group-input gi-check">
                            <div class="gi-more">
                                <label for="save-pass">
                                    Beni Hatırla
                                    <input type="checkbox" id="save-pass">
                                    <span class="checkmark"></span>
                                </label>
                                <a href="/hesabim/sifremi-unuttum" class="forget-pass">Şifremi Unuttum</a>
                            </div>
                        </div>
                        <button type="submit" class="site-btn login-btn">Giriş Yap</button>
                    }
                    <div class="switch-login">
                        <a href="/hesabim/uye-ol" class="or-login">Veya Bir Hesap Oluşturun</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
