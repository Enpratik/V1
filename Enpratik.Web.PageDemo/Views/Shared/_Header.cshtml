<header class="header-section">
    <div class="header-top">
        <div class="container">
            <div class="ht-left">
                <div class="mail-service">
                    <i class=" fa fa-envelope"></i>
                    <font class="textEdit" data-key="header_top_email">hello.colorlib@gmail.com</font>
                </div>
                <div class="phone-service">
                    <i class=" fa fa-phone"></i>
                    <font class="textEdit" data-key="header_top_gsm">+65 11.188.888</font>
                </div>
            </div>
            <div class="ht-right">
                <a href="#" class="login-panel"><i class="fa fa-user"></i>Üye Girişi</a>
                <div class="top-social">
                    <a href="#" class="linkEdit" data-key="header_top_sosyal_medya_facebook"><i class="ti-facebook"></i></a>
                    <a href="#" class="linkEdit" data-key="header_top_sosyal_medya_twitter"><i class="ti-twitter-alt"></i></a>
                    <a href="#" class="linkEdit" data-key="header_top_sosyal_medya_linkedin"><i class="ti-linkedin"></i></a>
                    <a href="#" class="linkEdit" data-key="header_top_sosyal_medya_pinterest"><i class="ti-pinterest"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="inner-header">
            <div class="row">
                <div class="col-lg-2 col-md-2">
                    <div class="logo logoEdit" data-key="header_logo">
                        <a href="/">
                            <img src="/img/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7">
                    <div class="advanced-search">
                        <button type="button" class="category-btn">All Categories</button>
                        <div class="input-group" style="display:flex">
                            <input type="text" placeholder="What do you need?">
                            <button type="button"><i class="ti-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 text-right col-md-3">
                    <ul class="nav-right">
                        @*<li class="heart-icon">
                                <a href="#">
                                    <i class="icon_heart_alt"></i>
                                    <span>1</span>
                                </a>
                            </li>*@
                        <li class="cart-icon">
                            <a href="#">
                                <i class="icon_bag_alt"></i>
                                <span>@Enpratik.Web.Eticaret.Model.Current.GetBasketItem().Count</span>
                            </a>
                            @if (@Enpratik.Web.Eticaret.Model.Current.GetBasketItem().Count > 0)
                            {
                                Enpratik.Data.EnPratik_DataHelper db = new Enpratik.Data.EnPratik_DataHelper();
                                double totalPrice = 0;

                                <div class="cart-hover">
                                    <div class="select-items">
                                        <table>
                                            <tbody>
                                                @foreach (var item in @Enpratik.Web.Eticaret.Model.Current.GetBasketItem())
                                                {
                                                    var product = item.GetProduct();
                                                    var images = db.Product_Picture_Mapping.Where(p => p.ProductId == product.Id & p.IsProductImage == true).FirstOrDefault();
                                                    var productUrl = "product/" + product.getUrl() + "-" + product.Id;


                                                    <tr>
                                                        <td class="si-pic">
                                                        <img style="width:110px;" src="@Enpratik.Core.Functions.GetProductImages(images)" alt=""></td>
                                                        <td class="si-text">
                                                            <div class="product-selected">
                                                                <p>@item.Quantity × @item.Price ₺</p>
                                                                <h6>@product.ProductName</h6>
                                                                @foreach (var variant in item.getVariantAttributesData())
                                                                {
                                                                    <p style="font-size: 11px;padding: 0;margin: 0;">
                                                                        @variant.variantName : @variant.variantValue
                                                                    </p>
                                                                }
                                                            </div>
                                                        </td>
                                                        <td class="si-close">
                                                            <i class="ti-close"></i>
                                                        </td>
                                                    </tr>
                                                    totalPrice += (item.Quantity * Convert.ToDouble(item.Price));

                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="select-total">
                                        <span>Toplam:</span>
                                        <h5>@Enpratik.Core.Functions.MoneyFormat(2, totalPrice) ₺</h5>
                                    </div>
                                    <div class="select-button">
                                        <a href="/sepetim" class="primary-btn view-card">Sepete Git</a>
                                        <a href="/checkout" class="primary-btn checkout-btn">Ödeme Yap</a>
                                    </div>
                                </div>


                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="nav-item">
        <div class="container">
            @*<div class="nav-depart">
                <div class="depart-btn">
                    <i class="ti-menu"></i>
                    <span>All departments</span>
                    <ul class="depart-hover">
                        <li class="active"><a href="#">Women’s Clothing</a></li>
                        <li><a href="#">Men’s Clothing</a></li>
                        <li><a href="#">Underwear</a></li>
                        <li><a href="#">Kid's Clothing</a></li>
                        <li><a href="#">Brand Fashion</a></li>
                        <li><a href="#">Accessories/Shoes</a></li>
                        <li><a href="#">Luxury Brands</a></li>
                        <li><a href="#">Brand Outdoor Apparel</a></li>
                    </ul>
                </div>
            </div>*@
            <nav class="nav-menu mobile-menu">
                <ul>

                    @Html.Raw(Enpratik.Web.HtmlHelpers.GetMenu())
                    @if (Session["EditMode"] != null)
                    {
                        <li><a data-fancybox data-type="iframe" data-src="/Admin/SiteMenus/Edit" href="javascript:;">Menü Düzenle</a></li>
                    }

                </ul>
            </nav>
            <div id="mobile-menu-wrap"></div>
        </div>
    </div>
</header>
